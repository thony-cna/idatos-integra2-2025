<?xml version="1.0" encoding="UTF-8"?>
<prov:document xmlns:prov="http://www.w3.org/ns/prov#"
               xmlns:dcterms="http://purl.org/dc/terms/"
               xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
               xmlns:ex="http://example.org/">

    <!-- Entidad: Tabla l2ratings -->
    <prov:entity prov:id="ex:l2ratings">
        <prov:label>Tabla l2ratings</prov:label>
        <prov:type>prov:Collection</prov:type>
        <dcterms:description>
            Tabla derivada con calificaciones (ratings) por usuario para libros. 
            Diseñada para enlazar con `books.csv` vía ISBN.
        </dcterms:description>
        <dcterms:date>2025-10-23T13:30:00</dcterms:date>
        <dcterms:source>https://www.kaggle.com/datasets/saurabhbagchi/books-dataset</dcterms:source>

        <!-- Miembros (columnas) -->
        <prov:hadMember prov:entity="ex:User-ID"/>
        <prov:hadMember prov:entity="ex:isbn"/>
        <prov:hadMember prov:entity="ex:Book-Rating"/>
    </prov:entity>

    <!-- Columnas -->
    <prov:entity prov:id="ex:User-ID">
        <prov:label>User-ID</prov:label>
        <prov:type>xsd:integer</prov:type>
        <dcterms:description>
            Identificador único del usuario que realiza la calificación.
        </dcterms:description>
    </prov:entity>

    <prov:entity prov:id="ex:isbn">
        <prov:label>isbn</prov:label>
        <prov:type>xsd:string</prov:type>
        <dcterms:description>
            Identificador del libro calificado (ISBN); referencia a `books.csv`.
        </dcterms:description>
    </prov:entity>

    <prov:entity prov:id="ex:Book-Rating">
        <prov:label>Book-Rating</prov:label>
        <prov:type>xsd:integer</prov:type>
        <dcterms:description>
            Puntuación otorgada por el usuario al libro (escala de 0 a 10).
        </dcterms:description>
    </prov:entity>

    <!-- Actividad: Creación de l2ratings -->
    <prov:activity prov:id="ex:generate_l2ratings"
                   prov:startTime="2025-10-23T13:30:00"
                   prov:endTime="2025-10-23T13:37:00">
        <prov:label>Generar la tabla de l2_ratings</prov:label>
        <dcterms:description>
            Extracción y transformación de las calificaciones para crear la tabla 
            l2_ratings y su enlace con libros por ISBN.
        </dcterms:description>
    </prov:activity>


    <!-- Agentes involucrados -->
    <prov:agent prov:id="ex:integra2">
        <prov:label>Grupo Integra2</prov:label>
        <prov:type>prov:Organization</prov:type>
        <prov:role>
            Responsable de la extracción y transformación de datos para l2ratings.
        </prov:role>
    </prov:agent>

    <prov:agent prov:id="ex:postgresql_db">
        <prov:label>PostgreSQL Import</prov:label>
        <prov:type>prov:SoftwareAgent</prov:type>
        <prov:role>Herramienta para cargar los datos.</prov:role>
    </prov:agent>

    <!-- Relaciones -->
    <prov:wasGeneratedBy prov:entity="ex:l2ratings"
                         prov:activity="ex:generate_l2ratings"/>
    <prov:wasAssociatedWith prov:activity="ex:generate_l2ratings"
                            prov:agent="ex:integra2"/>
    <prov:wasAssociatedWith prov:activity="ex:generate_l2ratings"
                            prov:agent="ex:postgresql_db"/>

</prov:document>
