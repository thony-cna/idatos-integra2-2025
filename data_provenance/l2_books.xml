<prov:document xmlns:prov="http://www.w3.org/ns/prov#"
               xmlns:xsd="http://www.w3.org/2001/XMLSchema#">

    <!-- Entidad: Tabla l2_books -->
    <prov:entity prov:id="ex:l2_books">
        <prov:label>Tabla l2_books</prov:label>
        <prov:description>Tabla derivada de Books Dataset, con metadatos principales de libros incluyendo título, autor, año de publicación, editorial y URLs de imágenes.</prov:description>
        <prov:creationDate>2025-10-22T00:30:00</prov:creationDate>
        <prov:columns>
            <prov:column>
                <prov:name>isbn</prov:name>
                <prov:type>text</prov:type>
                <prov:reason>Identificador único del libro (ISBN).</prov:reason>
            </prov:column>
            <prov:column>
                <prov:name>Book-Title</prov:name>
                <prov:type>text</prov:type>
                <prov:reason>Título del libro.</prov:reason>
            </prov:column>
            <prov:column>
                <prov:name>Book-Author</prov:name>
                <prov:type>text</prov:type>
                <prov:reason>Autor del libro.</prov:reason>
            </prov:column>
            <prov:column>
                <prov:name>Year-Of-Publication</prov:name>
                <prov:type>integer</prov:type>
                <prov:reason>Año de publicación del libro.</prov:reason>
            </prov:column>
            <prov:column>
                <prov:name>publisher</prov:name>
                <prov:type>text</prov:type>
                <prov:reason>Editorial del libro.</prov:reason>
            </prov:column>
            <prov:column>
                <prov:name>Image-URL-S</prov:name>
                <prov:type>text</prov:type>
                <prov:reason>URL de imagen pequeña del libro.</prov:reason>
            </prov:column>
            <prov:column>
                <prov:name>Image-URL-M</prov:name>
                <prov:type>text</prov:type>
                <prov:reason>URL de imagen mediana del libro.</prov:reason>
            </prov:column>
            <prov:column>
                <prov:name>Image-URL-L</prov:name>
                <prov:type>text</prov:type>
                <prov:reason>URL de imagen grande del libro.</prov:reason>
            </prov:column>
        </prov:columns>
    </prov:entity>

    <!-- Actividad: Creación de l2_books -->
    <prov:activity prov:id="ex:generate_ln_books"
                   prov:startTime="2025-10-22T00:00:00"
                   prov:endTime="2025-10-22T00:15:00">
        <prov:label>Integración de Books Dataset y Amazon Books Reviews</prov:label>
        <prov:description>Proceso de consolidación y limpieza de datos para generar la tabla ln_books con todos los metadatos y campos necesarios.</prov:description>
    </prov:activity>

    <!-- Agentes involucrados -->
    <prov:agent prov:id="ex:user_me">
        <prov:label>Usuario Responsable</prov:label>
        <prov:type>prov:Person</prov:type>
        <prov:role>Responsable de la extracción y transformación de datos para l2_books.</prov:role>
    </prov:agent>

    <prov:agent prov:id="ex:script_etl">
        <prov:label>Script de ETL</prov:label>
        <prov:type>prov:SoftwareAgent</prov:type>
        <prov:role>Script automatizado que realizó la selección y limpieza de columnas de Books Dataset.</prov:role>
    </prov:agent>

    <!-- Relaciones -->
    <prov:wasGeneratedBy prov:entity="ex:l2_books"
                         prov:activity="ex:generate_l2_books"/>
    <prov:wasDerivedFrom prov:generatedEntity="ex:l2_books"
                         prov:usedEntity="ex:books_dataset"/>
    <prov:wasAssociatedWith prov:activity="ex:generate_l2_books"
                            prov:agent="ex:user_me"/>
    <prov:wasAssociatedWith prov:activity="ex:generate_l2_books"
                            prov:agent="ex:script_etl"/>
    <prov:used prov:activity="ex:generate_l2_books"
               prov:entity="ex:books_dataset"/>
</prov:document>
